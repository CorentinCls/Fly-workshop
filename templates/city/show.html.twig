{% extends 'base.html.twig' %}

{% block title %}City
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<h1>City</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ city.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ city.name }}</td>
				</tr>
				<tr>
					<th>Latitude</th>
					<td>{{ city.latitude }}</td>
				</tr>
				<tr>
					<th>Longitude</th>
					<td>{{ city.longitude }}</td>
				</tr>
				<tr>
					<th>Country</th>
					<td>{{ city.country }}</td>
				</tr>
			</tbody>
		</table>

		<p>
			<a class="btn btn-success" href="{{ path('city_edit', {'id': city.id}) }}">edit</a>
			{{ include('city/_delete_form.html.twig') }}
		</p>
		<a class="btn btn-outline-dark" href="{{ path('city_index') }}">back to list</a>
	</main>
{% endblock %}
